{% if section.settings.dpl_block %}
<section class="home-block">
  <div class="row">
    {% for block in section.blocks %}
    <div class="col block-item">
      <a href="{{block.settings.link}}" title="{{block.settings.title}}">
        <div class="content">
          {% if block.settings.title %}<h4>{% include 'lang' with block.settings.title %}</h4>{% endif %}
          {% if block.settings.des %}<div class="des">{% include 'lang' with block.settings.des %}</div>{% endif %}
        </div>
        {% if block.settings.icon %}
        <div class="icon">
          <img src="{{ block.settings.icon | img_url:'100x' }}"/>
        </div>
        {% endif %}
      </a>
    </div>

    {% endfor %}
  </div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Home Block Html",
    "max_blocks": 5,
    "settings": [
		{
          "type" : "checkbox",
          "id" : "dpl_block",
          "label" : "Display Block",
          "default" : true
		},
		{
			"type" : "text",
			"id" : "font_size_header",
			"label" : "Font size header",
			"default" : "12px"
		},
		{
			"type" : "text",
			"id" : "font_size_des",
			"label" : "Font size Description",
			"default" : "10px"
		}
	],
    "blocks": [
	 {
        "type" : "Block",
        "name" : "Block",
		"settings":[

    	{
    		"type": "image_picker",
    		"id": "icon",
    		"label" : "Select Icon"
    	},
    	{
    		"type" : "text",
    		"id": "title",
    		"label" : "Header",
    		"default" : "BIG SAVING"
    	},
    	{
    		"type" : "text",
    		"id" : "des",
    		"label" : "Description",
    		"default" : "Weeken Sales"
    	},
		{
			"type" : "url",
			"id": "link",
			"label" : "Link"
		}
	   ]
	  }
	],	
	"presets": [{
      "name": "Block Html",
      "category": "Block Html"
    }]
  }
{% endschema %}

<style>
  .home-block .block-item h4{
    font-size:{{section.settings.font_size_header}};
  }
  .home-block .block-item .des{
    font-size:{{section.settings.font_size_des}};
  }
</style>