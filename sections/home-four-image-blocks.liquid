<section class="four-image-block">
    <div class="row">
      {% for block in section.blocks %}
      <div class="block-items col">
        {% if block.settings.display_block_1 %}
        {% if block.settings.img_block_1 != blank %}
        <div class="img_1">
          <a href="{{ block.settings.link_1 }}">
            <img src="{{block.settings.img_block_1 | img_url:'600x' }}"/>
          </a>
        </div>
        {% endif %}
        {% endif %}
        {% if block.settings.display_block_2 %}
        {% if block.settings.img_block_2 != blank %}
        <div class="img_2">
          <a href="{{ block.settings.link_2 }}">
            <img src="{{ block.settings.img_block_2 | img_url:'600x' }}"/>
          </a>
        </div>
        {% endif %}
        {% endif %}
      </div>
      {% endfor %}
    </div>
</section>
{% schema %}
  {
    "name": "Four images blocks",
    "max_blocks": 3,
    "settings": [

	],
	"blocks":[{
		"type" : "ImageBlock",
		"name" : "Image Block",
		"settings" : [
			{
				"type" : "checkbox",
				"id": "display_block_1",
				"label" : "Display Image Block 1",
				"default" : true
			},
			{
				"type" : "image_picker",
				"id": "img_block_1",
				"label" : "Image Block 1"
			},
			{
				"type" : "url",
				"id" : "link_1",
				"label" : "Link Image 1"
			},
			{
				"type" : "checkbox",
				"id": "display_block_2",
				"label" : "Display Image Block 2",
				"default" : false
			},			
			{
				"type" : "image_picker",
				"id": "img_block_2",
				"label" : "Image Block 2"
			},
			{
				"type" : "url",
				"id" : "link_2",
				"label" : "Link Image 2"
			}
		]

	}],
	  "presets": [{
	  "name": "Four images blocks",
	  "category": "Images Blocks "
	}]
}
{% endschema %}

