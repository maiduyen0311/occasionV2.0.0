<style>
  .categories-title{
    color:{{section.settings.color_title}};
    background: {{section.settings.bg_cat}};
  }
  .categories-title a{
    color:{{section.settings.color_title}};
  }
  .categories-title svg{
    fill:{{section.settings.color_title}};
  }
  .categories-title svg path{
    fill:{{section.settings.color_title}};
  }
  .main-categories{
    background: {{section.settings.bg_nav}};
    color: {{section.settings.color_text}};
  }
  .main-categories .nav-right, .main-categories .nav-right a{
    color: {{section.settings.color_text}};
  }
  .main-categories .nav-right .text_2 .icon svg{
    fill: {{section.settings.color_text}};
  }
  
  {% if section.settings.dpl_clmn_right == false %}
  .main-categories>.container .nav-middle{
    width: calc(100% - 260px);
  }
  {% endif %}

  .label-new > a span:after{
    content: "{{section.settings.lb_new}}";
  }
  .label-hot > a span:after{
    content: "{{section.settings.lb_hot}}";
  }
  
  .main-categories .nav-middle>ul>li>a{
    color:{{ section.settings.hrl_color_mn }};
  }
  .main-categories .nav-middle>ul>li>a:hover{
    color:{{ section.settings.hrl_color_menu_hover }};
  }
  .main-categories .nav-middle>ul>li>a.current{
    color:{{ section.settings.hrl_color_menu_hover }};
  }
  .main-categories .nav-middle>ul>li>ul>li>a, .main-categories .nav-middle .mega-menu .site-nav-dropdown .child-link{
    color:{{ section.settings.color_lv_2}};
  }
  .main-categories .nav-middle>ul>li>ul>li>a:hover, .main-categories .nav-middle .mega-menu .site-nav-dropdown .child-link:hover{
    color:{{ section.settings.color_lv_2_hover }};
  }
  .main-categories .nav-middle .mega-menu .site-nav-dropdown ul li a, .main-categories .nav-middle>ul>li>ul>li a{
    color:{{ section.settings.color_lv_3}};
  }
  .main-categories .nav-middle .mega-menu .site-nav-dropdown ul li a:hover, .main-categories .nav-middle>ul>li>ul>li a:hover{
    color:{{ section.settings.color_lv_3_hover }};
  }
  .main-categories>.container .nav_item .main-menu>ul>li>a, .menu-mobile>ul>li>a, .mn-mobile>ul>li>a{
    color:{{ section.settings.cat_color_lv_1 }};
  }
  .main-categories>.container .nav_item .main-menu>ul>li>a:hover, .menu-mobile>ul>li>a:hover, .mn-mobile>ul>li>a:hover{
    color:{{ section.settings.cat_color_lv_1_hover }};
  }
/*    */
  .nav-left .mega-menu .site-nav-dropdown .child-link, .main-categories>.container .nav_item .main-menu>ul>li>ul>li>a, .hd-mobile .site-nav-dropdown .inner > a{ 
	color:{{ section.settings.cat_color_lv_2}}!important;
  }
  .nav-left .mega-menu .site-nav-dropdown .child-link:hover, .main-categories>.container .nav_item .main-menu>ul>li>ul>li>a:hover, .hd-mobile .site-nav-dropdown .inner > a:hover{
    color:{{ section.settings.cat_color_lv_2_hover }}!important;
  }
/*    */
  .nav-left .mega-menu .site-nav-dropdown .dropdown li a, .main-categories>.container .nav_item .main-menu>ul>li>ul>li>ul>li a, .hd-mobile .site-nav-dropdown .inner ul li a{ 
    color:{{ section.settings.cat_color_lv_3}}!important;
  }
  .nav-left .mega-menu .site-nav-dropdown .dropdown li a:hover, .main-categories>.container .nav_item .main-menu>ul>li>ul>li>ul>li a:hover, .hd-mobile .site-nav-dropdown .inner ul li a:hover{
    color:{{ section.settings.cat_color_lv_3_hover}}!important;
  }
  
  .menu-mobile .icon:hover:after, .menu-mobile .icon:hover:before{
    background:{{ section.settings.cat_color_lv_1_hover }};
  }
</style>

{% if template != 'index' %}
