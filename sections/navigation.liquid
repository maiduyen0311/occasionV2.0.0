<div class="main-categories">
  <div class="container">
    <div class="row">
      <div class="nav-left nav_item">
        <div class="categories-title">
          {% include 'line_menu' %}
          {% include 'close_mn' %}
          <a href="javascript:void(0)">{% include 'lang' with section.settings.title_cat %}</a>
        </div>
        <nav class="main-menu">
          <ul>
            {% for link in linklists[section.settings.main_linklist].links %}
              {% include 'site-nav' %}
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div class="nav-middle nav_item">
        <ul class="site-nav">
          {% for link in linklists[section.settings.hrl_mn].links %}
          	{% include 'site-nav' %}
          {% endfor %}
        </ul>
      </div>
      {% if section.settings.dpl_clmn_right %}
      <div class="nav-right nav_item">
      	<div class="text_1">
      		{% include 'lang' with section.settings.text_1 %}
      	</div>
        <div class="text_2">
          <i class="icon">
            {% include 'icon-phone' %}
          </i>
          {% include 'lang' with section.settings.text_2 %}
        </div>
      </div>
      {% endif %}

    </div>
  </div>
</div>
