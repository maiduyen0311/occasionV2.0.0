<section class="two-block-image">
  <div class="row">
    {% if section.settings.image_1  != blank %}
    <a class="col" href="{{ section.settings.link }}">
      <img src="{{ section.settings.image_1 | img_url: '100x'}}" alt=""             
           data-src="{{ section.settings.image_1  | img_url: '2000x' }}"
           class="lazyload"
           data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
           data-aspectratio="{{   section.settings.image_1   | img_url: '2000x' }}"
           data-sizes="auto"/>
    </a>
    {% endif %}
    {% if section.settings.image_2  != blank %}
    <a class="col" href="{{ section.settings.link_2 }}">
      <img src="{{ section.settings.image_2 | img_url: '100x'}}" alt=""             
           data-src="{{ section.settings.image_2  | img_url: '2000x' }}"
           class="lazyload"
           data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
           data-aspectratio="{{   section.settings.image_2  | img_url: '2000x' }}"
           data-sizes="auto"/>
    </a>
    {% endif %}
  </div>
</section>
{% schema %}
  {
    "name": "Two Image Block",
    "settings": [
      {	
          "type" : "image_picker",
          "id" : "image_1",
          "label" : "Select image"
      },
	  {
	  	"type" : "url",
		"id" : "link",
		"label" : "Link image"
	  },      
	  {	
          "type" : "image_picker",
          "id" : "image_2",
          "label" : "Select image 2"
      },
	  {
	  	"type" : "url",
		"id" : "link_2",
		"label" : "Link image 2"
	  }
	
	],
	"presets": [
      {
        "name": "Two Image Block",
	  	"category": "Images Blocks "
      }
    ]
  }
{% endschema %}