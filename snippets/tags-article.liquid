{% comment %}

  This snippet renders a list item with all tags listed out.
  It is used in article.liquid and blog.liquid.

  More information:
   - index#article-tags
   - http://docs.shopify.com/themes/liquid-variables/article

{% endcomment %}

{% if article.tags.size > 0 %}
<ul class="user-tags">
  <span class="title-tabs">Tags:</span>
  <li>
    {% comment %}
    <label>
      <span {% if settings.enable_multilang %}data-translate="blogs.article.tags"{% endif %}>
        {{ 'blogs.article.tags' | t }}
      </span>:
    </label>
    {% endcomment %}
    {% for tag in article.tags %}
    <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %} {% endunless %}
    {% endfor %}
  </li>
</ul>
{% endif %}