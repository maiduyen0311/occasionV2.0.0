
<div class="toolbar">
  <div class="view-mode">
    <div class="page-total">
      <span {% if settings.enable_multilang %}data-translate="collections.toolbar.showing"{% endif %}>{{ 'collections.toolbar.showing' | t }}</span>: 
      {{ paginate.current_offset | plus: 1 }} -
      {% if paginate.next %}
      {{ paginate.current_offset | plus: paginate.page_size }}
      {% else %}
      {{ paginate.items }}
      {% endif %}
      <span {% if settings.enable_multilang %}data-translate="collections.toolbar.of"{% endif %}>{{ 'collections.toolbar.of' | t }}</span>
      {{ paginate.items }}
    </div>
    <a class="grid active" href="grid" title="{{ 'collections.general.grid_view' | t }}" {% if settings.enable_multilang %}data-translate="collections.general.grid_view" translate-item="title"{% endif %}>
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="19" height="20" viewBox="0 0 19 20"><defs><path id="rjuxa" d="M765 495h7.77v7.77H765zm9.23 0H782v7.77h-7.77zm-9.23 9.23h7.77V512H765zm9.23 0H782V512h-7.77z"/></defs><g><g transform="translate(-764 -493)"><use xlink:href="#rjuxa"/></g></g></svg>
    </a>  
    <a class="list" href="list" title="{{ 'collections.general.list_view' | t }}" {% if settings.enable_multilang %}data-translate="collections.general.list_view" translate-item="title"{% endif %}>
      <svg xmlns="htta://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="28" height="19" viewBox="0 0 28 19"><defs><path id="hjaua" d="M799.41 508.52H819v3.38h-19.59zm0-6.66H819v3.38h-19.59zm0-6.86H819v3.38h-19.59zM794 508.62h3.57V512H794zm0-6.76h3.57v3.38H794zm0-6.86h3.57v3.38H794z"/></defs><g><g transform="translate(-793 -494)"><use xlink:href="#hjaua"/></g></g></svg>
    </a>  
  </div>

  <div class="filter-sortby btn-group">
    <button class="btn btn-2 dropdown-toggle" data-toggle="dropdown">

      <span {% if settings.enable_multilang %}data-translate="collections.sorting.featured"{% endif %}>{{ 'collections.sorting.featured' | t }}</span>
      <i class="fa fa-angle-down"></i>
    </button>

    <ul class="dropdown-menu" role="menu">
      <li class="active"><span data-href="manual" {% if settings.enable_multilang %}data-translate="collections.sorting.featured"{% endif %}>{{ 'collections.sorting.featured' | t }}</span></li>
      <li><span data-href="price-ascending" {% if settings.enable_multilang %}data-translate="collections.sorting.price_ascending"{% endif %}>{{ 'collections.sorting.price_ascending' | t }}</span></li>
      <li><span data-href="price-descending" {% if settings.enable_multilang %}data-translate="collections.sorting.price_descending"{% endif %}>{{ 'collections.sorting.price_descending' | t }}</span></li>
      <li><span data-href="title-ascending" {% if settings.enable_multilang %}data-translate="collections.sorting.az"{% endif %}>{{ 'collections.sorting.az' | t }}</span></li>
      <li><span data-href="title-descending" {% if settings.enable_multilang %}data-translate="collections.sorting.za"{% endif %}>{{ 'collections.sorting.za' | t }}</span></li>
      <li><span data-href="created-ascending" {% if settings.enable_multilang %}data-translate="collections.sorting.date_ascending"{% endif %}>{{ 'collections.sorting.date_ascending' | t }}</span></li>
      <li><span data-href="created-descending" {% if settings.enable_multilang %}data-translate="collections.sorting.date_descending"{% endif %}>{{ 'collections.sorting.date_descending' | t }}</span></li>
      <li><span data-href="best-selling" {% if settings.enable_multilang %}data-translate="collections.sorting.best_selling"{% endif %}>{{ 'collections.sorting.best_selling' | t }}</span></li>
    </ul>
  </div>

</div>